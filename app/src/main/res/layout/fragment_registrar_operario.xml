<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentacion.ui.fragment.DesasignarProductoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ProgressBar
                        android:id="@+id/progress_horizontal"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:indeterminate="true"
                        android:progressBackgroundTint="@color/primary"
                        android:secondaryProgressTint="@color/primary" />

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lb_identificacion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:baselineAligned="false"
                    android:fontFamily="@font/font_noto_serif_regular_300"
                    android:text="Identificación"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout_identificacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/font_noto_serif_regular_300"
                    app:endIconMode="clear_text"
                    android:inputType="text"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_identificacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/text_color"
                        android:ems="10"
                        android:inputType="text"
                        android:fontFamily="@font/font_noto_serif_regular_300"
                        android:textColor="@color/text_color"
                        android:textSize="18sp"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lb_codigoOperario"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:baselineAligned="false"
                    android:fontFamily="@font/font_noto_serif_regular_300"
                    android:text="Código (4 dígitos)"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"/>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_codigoOperario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/font_noto_serif_regular_300"
                app:endIconMode="clear_text"
                android:inputType="number"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_codigoOperario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/text_color"
                    android:fontFamily="@font/font_noto_serif_regular_300"
                    android:inputType="number"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"/>
            </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lb_nombreOperario"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:baselineAligned="false"
                    android:fontFamily="@font/font_noto_serif_regular_300"
                    android:text="Nombre"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"/>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_nombreOperario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/font_noto_serif_regular_300"
                app:endIconMode="clear_text"
                android:inputType="text"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_nombreOperario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/text_color"
                    android:fontFamily="@font/font_noto_serif_regular_300"
                    android:inputType="text"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"/>
            </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lb_apellidosOperario"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:baselineAligned="false"
                    android:fontFamily="@font/font_noto_serif_regular_300"
                    android:text="Apellido"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"/>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_apellidosOperario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/font_noto_serif_regular_300"
                app:endIconMode="clear_text"
                android:inputType="text"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_apellidosOperario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/text_color"
                    android:fontFamily="@font/font_noto_serif_regular_300"
                    android:inputType="text"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"/>
            </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="30dp"
                android:gravity="center"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnCargar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_gradiend_buttom"
                    android:fontFamily="@font/font_noto_serif_regular_300"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="Cargar operarios del servidor"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:background="@drawable/bg_gradiend_buttom_radius"
                android:fontFamily="@font/font_noto_serif_regular_300"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="Guardar operario"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnVer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_gradiend_buttom_radius"
                android:fontFamily="@font/font_noto_serif_regular_300"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="Ver operarios"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
